<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Floating label style -->
    <style name="EditTextHintStyleOne" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/holo_orange_light</item>
    </style>
    <style name="EditTextHintStyleTwo" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>

    <!--Input field style -->
    <style name="EditTextStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/black</item>
    </style>

</resources>
